<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.demo.list.viewpager.activity.ViewFlipperActivity1">

    <ViewFlipper
        android:id="@+id/view_flipper1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4e4e4">

        <include
            android:id="@+id/layout1"
            layout="@layout/fragment_simple_fragment1"/>

        <include
            android:id="@+id/layout2"
            layout="@layout/fragment_simple_fragment2"/>

        <include
            android:id="@+id/layout3"
            layout="@layout/fragment_simple_fragment3"/>

        <include
            android:id="@+id/layout4"
            layout="@layout/fragment_simple_fragment4"/>
    </ViewFlipper>

</LinearLayout>
